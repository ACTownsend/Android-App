<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6002.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="yoshi.png"
                SemanticProperties.Description="beeeeeeeeeg yoshi"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Wordle game*"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Wordle game*"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                Text="Begin"
                SemanticProperties.Hint="Begin"
                Clicked="Button_Clicked_1"
                HorizontalOptions="Center" />

            <Label
                Text="*Not official Wordle."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="For legal reasons"
                FontSize="6"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>